<header>
  <h1>User <%= @user.name %></h1>
</header>

<p class="actions">
  <%= link_to "Back", users_path %>
</p>

<p>
  <span>Name:</span>
  <span><%= @user.name %></span>
</p>

<h3>Friends</h3>
<p class="actions">
  <%= link_to "Add Friend", new_user_friendship_path(@user) %>
</p>
<ul>
  <% @user.friendships.each do |friendship| %>
  <li>
    <%= link_to friendship.friend.name, friendship.friend %>
    [ <%= link_to "Remove", friendship_path(friendship), method: :delete, confirm: "Remove #{friendship.friend.name} as a friend?" %> ]
  </li>
  <% end %>
</ul>

<h3>Acquaintances</h3>
<ul>
  <% @user.acquaintances.each do |acquaintance| %>
  <li>
    <%= link_to acquaintance.name, acquaintance %>
  </li>
  <% end %>
</ul>

<p class="actions">
  <%= link_to "Edit", edit_user_path(@user) %> |
  <%= link_to "Delete", user_path(@user), confirm: "Delete #{@user.name}?", method: :delete %>
</p>
